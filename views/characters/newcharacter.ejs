<%- include("../partials/header.ejs") %>
    <html>

    <body id="character">
        <div class="new">

            <h2>Add New Character:</h2>
            <form action="/character" method="post" accept-charset="UTF-8">

                <label>First Name:</label>
                <br>
                <input type="text" name="firstName" id="" />
                <br>
                <label>Last Name:</label>
                <br>
                <input type="text" name="lastName" id="" />
                <br>
                <label>Aliases:</label>
                <br>
                <input type="text" name="alias" id="" />
                <br>
                <label>Gender:</label>
                <br>
                <input type="text" name="gender" id="" />
                <br>
                <label>Age at beginning of story:</label>
                <br>
                <input type="integer" name="age" id="" />
                <br>
                <label>Profession:</label>
                <br>
                <input type="text" name="prof" id="" />
                <br>
                <label>Description:</label>
                <br>
                <input type="text" name="desc" id="" />
                <br>
                <label>Character Background:</label>
                <br>
                <input type="text" name="background" id="" />
                <br>
                <label>Character Image(URL):</label>
                <br>
                <input type="text" name="image" id="" />
                <br>
                <label>Story Id#:</label>
                <br>
                <input type="integer" name="storyId" name="" />
                <br>
                <div class="change">
                    <input type="submit" value="Add New Character!" />
            </form>
            </div>
        </div>

    </body>

