<%- include("../partials/header.ejs") %>
    <html>

    <body id="character">
        <div class="show">
            <h2>First Name:
                <%= character.firstName %>
            </h2>
            <h2>Last Name:
                <%= character.lastName %>
            </h2>
            <h2>Aliases:
                <%= character.alias %>
            </h2>
            <h2>Gender:
                <%= character.gender %>
            </h2>
            <h2>Age at start of story:
                <%= character.age %>
            </h2>
            <h2>Profession:
                <%= character.prof %>
            </h2>
            <div>
                <h2>Character Description:

                    <%= character.desc %>
                </h2>
            </div>
            <div class="background">
                <h2>Character Background:
                    <div>
                        <%= character.background %>
                    </div>
                </h2>
            </div>
            <div class="picture">
                <h2>Character picture:</h2>
                <div>
                    <img src="<%= character.image %>" alt="characer picture">
                </div>
            </div>
            <div>
                <h2>Story Id#:
                    <a href="../story/<%= character.storyId %>">
                        <%= character.storyId %>
                </h2>
            </div>
            <div class="changes">
                <h2>
                    <a href="/character/edit/<%= character.id %>">Edit or Delete Character</a>
                </h2>
            </div>
        </div>

    </body>

    <%- include("../partials/footer.ejs") %>

    </html>